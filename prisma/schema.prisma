generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Category {
  NOTICE
  FREE
  MANAGE
}

model User {
  user_id  Int     @id @default(autoincrement())
  email    String  @unique
  id       String  @unique
  password String
  role     Role
  post     Post[]
}

model Post {
  post_id  Int      @id @default(autoincrement())
  title    String
  content  String   @db.Text
  category Category
  user     User     @relation(fields: [user_id], references: [user_id])
  user_id  Int
}